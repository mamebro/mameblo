%div#content{data: {max: {page: @entries.num_pages}}}
  %article#entries.autopager-content
    - @entries.each do |entry|
      %section.entry.autopager-item
        %h1.entry-title= link_to entry.title, entry
        %div.entry-content
          = sanitize entry.content
          - if signed_in? && !current_brother?(entry.brother)
            = form_tag entry_beans_path(entry), remote: true, class: 'entry-beans is_throwable clearfix', method: 'post', name: 'beans_name' do
              %span.beans-count.iconmark.iconmark-bean{data: {beans: {count: entry.beans.count}}}<>
                = entry.beans.count
          - else
            %div.entry-beans.clearfix
              %span.beans-count.iconmark.iconmark-bean{data: {beans: {count: entry.beans.count}}}<>
                = entry.beans.count
= paginate @entries
