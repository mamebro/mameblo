= form_for(@entry) do |f|
  = render 'shared/error_messages', object: f.object
  %div.field
    = f.text_field :title, class: 'input input-text', placeholder: "!!! タイトル !!!"
    = f.text_area :content, id: 'textarea', class: 'input input-textarea', rows: '8', placeholder: "!!! 本文 !!!"
  = f.submit "!!! 投稿 !!!", class: "button blue"