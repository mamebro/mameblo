= provide(:title, 'パスワード変更')
%div.modal
  %div.modal-wrapper
    %div.modal-content.wow.flash{data:{wow:{iteration: '3', duration: '0.15s'}}}
      %h1.modal-title
        パスワード変更
      = form_for @brother, url: update_password_settings_path, method: "post" do |f|
        = render 'shared/error_messages', object: f.object
        = f.password_field :present_password, class: 'input input-text', placeholder: '現在のパスワード'
        = f.password_field :password, class: 'input input-text', placeholder: '新しいパスワード'
        = f.password_field :password_confirmation, class: 'input input-text', placeholder: '新しいパスワードもう一回お願いします !!'
        = f.submit '変更する', class: 'button button-horizontal button-primary'
      = link_to settings_path, class: 'nav-close' do
        %i.iconbutton.nav-editor-control<>
          &#10060;
